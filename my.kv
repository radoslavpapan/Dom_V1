        text: 'Settings'
        GridLayout:
            spacing: 20
            padding: 5
            cols: 2
            Label:
                text: "Smart Heating"
                hint_text: "skuska"
                font_size: 20
            Switch:
                active: False
                on_active: root.smart_heating_switch(self, self.active)
            Label:
                text: "Smart Blinds"
                font_size: 20
            Switch:
                active: False
                on_active: root.smart_blinds_switch(self, self.active)
            Label:
                text: "Smart Irrigation"
                font_size: 20
            Switch:
                active: False
                on_active: root.smart_irrigation_switch(self, self.active)
            ToggleButton:
                id: login_button
                text: "LogIn"
                font_size: 20
                on_press: root.LogIn()
            TextInput:
                hint_text: "Enter Password"
                id: login_password
            Button:
                text: "Refresh IP"
                font_size: 20
                on_press: root.refresh_ip_press()
                on_release: root.refresh_ip_release()
            Label:
                id: label_UDP_IP
                font_size: 30
                bold: True
            Button:
                id: conf_API_button
                disabled: True
                text: 'ConfAPI'
                font_size: 20
                on_release: app.open_settings()
            Label:
            Button:
                id: close_API_button
                disabled: True
                text: "Close API"
                font_size: 20
                on_release: root.close_api()
            Label:
            Button:
                text: "Reboot System"
                font_size: 20
                on_release: root.reboot_system()
            Label:
            Button:
                text: "Update"
                font_size: 20
                on_release: root.update_system()
            Label:
            Button:
                text: "Power off system"
                font_size: 20
                on_release: root.shutdown_system()