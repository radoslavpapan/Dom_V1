<MyGridLayout>
    do_default_tab: False
    TabbedPanelItem:
        text: 'Home'
        GridLayout:
            cols:2
            spacing: 30
            padding: 5
            size: root.width, root.height
            GridLayout:
                cols:1
                spacing: 30
                GridLayout:
                    cols:2
                    spacing: 5
                    size_hint: 1, .1
                    Image:
                        id: connection_stat_picture
                        source: "excl_mark.png"
                        size_hint: .3, 1
                    Label:
                        id: connection_stat_label
                        text: "Connecting..."
                        font_size: 20
                        bold: True
                        background_color: (0, .85, 1, .5)
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            Rectangle:
                                size: self.size
                                pos: self.pos
                    Label:
                        text: "IP: "
                        size_hint: .1, 1
                    Label:
                        id: UDP_IP_label
                        size_hint: .1, 1

                GridLayout:
                    cols:3
                    spacing: 5
                    Image:
                        source: "Temp.png"
                        size_hint: .5, .5
                    Label:
                        text: "Temp OUT: "
                        font_size: 20
                        bold: True
                    Label:
                        id: TempOUT_label
                        font_size: 20
                        bold: True
                    Image:
                        source: "Humm.png"
                        size_hint: .5, .5
                    Label:
                        text: "Humm OUT: "
                        font_size: 20
                        bold: True
                    Label:
                        id: HummOUT_label
                        font_size: 20
                        bold: True
                    Image:
                        source: "Wind.png"
                        size_hint: .5, .5
                    Label:
                        text: "Speed WIND: "
                        font_size: 20
                        bold: True
                    Label:
                        id: SpeedWIND_label
                        font_size: 20
                        bold: True
                    Image:
                        source: "HummSOIL.png"
                        size_hint: .5, .5
                    Label:
                        text: "Humm SOIL: "
                        font_size: 20
                        bold: True
                    Label:
                        id: HummSOIL_label
                        font_size: 20
                        bold: True
                    Image:
                        source: "LightOUT.png"
                        size_hint: .5, .5
                    Label:
                        text: "Light OUT: "
                        font_size: 20
                        bold: True
                    Label:
                        id: LightOUT_label
                        font_size: 20
                        bold: True
            GridLayout:
                cols: 1
                spacing: 30
                Label:
                    text: "Fast Set"
                    font_size: 20
                    bold: True
                    size_hint: 1, .1
                GridLayout:
                    cols: 2
                    spacing: 10
                    Image:
                        source: "Key.png"
                        size_hint: .5, .5
                    Button:
                        text: 'Open Small Gate'
                        on_release: root.open_small_gate()
                    Image:
                        source: "BigGate.png"
                        size_hint: .5, .5
                    Button:
                        text: 'Open Big Gate'
                        on_press: root.open_big_gate_press()
                        on_release: root.open_big_gate_release()
    TabbedPanelItem:
        text: 'Rooms'
        Button:
            text: "Start"
            id: start_button
            on_press: root.button_press()

